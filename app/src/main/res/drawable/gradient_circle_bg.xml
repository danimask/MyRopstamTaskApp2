<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="oval" >
            <gradient
                android:angle="360"
                android:startColor="#4751c4"
                android:centerColor="#5f89d5"
                android:endColor="#70c5e4"
                android:type="linear" />
            <size android:width="24dp"
                android:height="24dp"/>
        </shape>
    </item>

    <item
        android:bottom="0.6dp"
        android:left="0.6dp"
        android:right="0.6dp"
        android:top="0.6dp">
        <shape android:shape="oval" >
            <solid android:color="#fff" />
        </shape>
    </item>

</layer-list>